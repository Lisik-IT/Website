<article class="portfolio-item clearfix <%- project.categories.map(category => `pf-${category}`).join(' ') %>">
  <div class="portfolio-image">
    <a href="#">
      <img src="<%- project.image %>" alt="<%- project.name %>">
    </a>
    <div class="portfolio-overlay">
      <a href="<%- project.image %>" class="left-icon" data-lightbox="image">
        <i class="icon-line-plus"></i>
      </a>
      <a href="#" class="right-icon">
        <i class="icon-line-ellipsis"></i>
      </a>
    </div>
  </div>
  <div class="portfolio-desc">
    <h3>
      <a href="<%- project.id %>"><%- project.name %></a>
    </h3>
    <span>
    <% project.categories.forEach((category, index) => { %>
      <a href="#"><%- category %></a><%- project.categories.length === index + 1 ? '' : ', ' %>
    <% }) %>
    </span>
    <p><%- project.description %></p>
    <ul class="iconlist">
      <li>
        <i class="icon-ok"></i>
        <strong>Created Using:</strong>
        <% project.technologies.forEach((technology, index) => { %>
          <%- technology %><%- project.technologies.length === index + 1 ? '' : ', ' %>
        <% }) %>
      </li>
      <li>
        <i class="icon-ok"></i>
        <strong>Completed on: </strong><%- date(project.completed) %>
      </li>
      <li>
        <i class="icon-ok"></i>
        <strong>By:</strong>
        <% project.authors.forEach((author, index) => { %>
          <a href="#"><%- author %></a><%- project.authors.length === index + 1 ? '' : ', ' %>
        <% }) %>
      </li>
    </ul>
    <a href="//<%- project.url %>" target="_blank" class="button button-3d noleftmargin">Launch Project</a>
  </div>
</article>
